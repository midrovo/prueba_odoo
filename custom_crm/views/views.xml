<odoo>
    <data>
        <record id="view_account_payment_form" model="ir.ui.view">
            <field name="name">view.account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <!-- <xpath expr="//form/header" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
                <xpath expr="//form/header" position="after">
                    <field name="estado" />
                </xpath>
            </field>
        </record>

        <record id="action_account_payment_visit_view" model="ir.actions.act_window">
            <field name="name">Depositos</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Depositos
                </p>
                <p>
                    Click "Nuevo" para a√±adir nuevos depositos
                </p>
            </field>
        </record>

        <menuitem
            id="menu_account_payment_deposit"
            parent="account.menu_finance_receivables"
            name="Depositos"
            sequence="0"
            action="action_account_payment_visit_view"/>
    </data>
</odoo>
